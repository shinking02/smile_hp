{
    "compilerOptions": {
        "target": "es2020",
        "module": "ES6",
        "lib": ["es2020"],
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["./"],
    "compileOnSave": false,
}
